@model IEnumerable<hotelcourseworkV2.Models.Menu>

<div class="container">
    <h1 class="my-4">Меню</h1>
    
        <p>
            <a asp-controller="Menu" asp-action="MenuCreate" class="btn btn-primary">Додати меню</a>
        </p>
    }
    @if (Model != null)
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@item.Dish.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.Hotel.Name</h6>
                            <p class="card-text">Ціна: @item.Price</p>
                            @if(User.IsInRole("Повар в отеле")){
                                <a asp-controller="Menu" asp-action="MenuDelete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> Видалити
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Меню відсутнє.</p>
    }
</div>
