@model hotelcourseworkV2.Models.ReserveRoom

@{
    ViewData["Title"] = "Create";
}

@{
    Random random = new Random();
    int price = random.Next(500, 1501);
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <hr />
            <form asp-action="ReserveCreate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="QuestId" class="form-control" value="@ViewBag.QuestId" hidden/>
                <div class="form-group">
                    <label asp-for="HotelTypeRoomId" class="control-label">Выберите тип комнаты</label>
                    <select asp-for="HotelTypeRoomId" class="form-control" asp-items="ViewBag.HotelTypeRoomId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="BookingDate" class="control-label">Дата бронирования</label>
                    <input asp-for="BookingDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ArrivalDate" class="control-label">Дата прибытия</label>
                    <input asp-for="ArrivalDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartureDate" class="control-label">Дата отъезда</label>
                    <input asp-for="DepartureDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DepartureDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Выбрать сервес</label>
                    <select class="form-control">
                        <option value="">----Оберіть сервіс-----</option>
                        <option value="1">Басейн</option>
                        <option value="2">Спа</option>
                        <option value="3">прокат автомобилей</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Средняя цена</label>
                    <input asp-for="Price" class="form-control" value="@price" readonly/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
